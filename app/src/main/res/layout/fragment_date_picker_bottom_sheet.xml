<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:clickable="true"
    android:elevation="10dp"
    android:background="@drawable/bottomsheet_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <TextView
        android:id="@+id/txtBirthDate"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:layout_centerInParent="true"
        android:gravity="center"

        android:layout_marginTop="20dp"
        android:text="Select your date of birth"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/linBankAc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/relMonth"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtMonth"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="Month"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/tabIncatorMonth"
                android:layout_below="@+id/txtMonth"
                android:background="@color/teal_200"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/relYear"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtYear"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="Year"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/tabIncatorYear"
                android:layout_below="@+id/txtYear"
                android:background="@color/teal_200"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="2dp"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/relDatePicker"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </CalendarView>

    </RelativeLayout>

</LinearLayout>
